<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/splashscreen_background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
    </style>

    <style name="ButtonSocmed" parent="Widget.MaterialComponents.Button">
        <item name="iconTint">@android:color/transparent</item>
        <item name="iconTintMode">add</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="TextLabel" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="InputLayout" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorError">@android:color/holo_red_dark</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_large_dark">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="lineHeight">13dp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="title_large_light">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="lineHeight">13dp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="title_normal_dark">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="lineHeight">13dp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="title_normal_light">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="lineHeight">13dp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="desc_normal_white">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="lineHeight">14dp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="desc_normal_dark">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="lineHeight">14dp</item>
        <item name="android:letterSpacing">0</item>
    </style>
</resources>
